# Server-side Environment Variables
# Copy this file to .env and fill in your API keys

# AI Provider Configuration
# Set to "claude" for real AI or "mock" for testing
AI_TEXT_PROVIDER=claude
AI_IMAGE_PROVIDER=mock

# Claude API Key (required for real text generation)
# Get from: https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxx

# NanoBanana API Key (optional, for image generation)
NANOBANANA_API_KEY=

# Server Configuration
PORT=3001
CLIENT_ORIGIN=http://localhost:8080

# Retry Configuration
AI_MAX_RETRIES=2

# Supabase (optional, for cross-device sharing)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
