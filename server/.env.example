# Server-side Environment Variables
# Copy this file to .env and fill in your API keys

# AI Provider Configuration
# Set to "claude" for real AI or "mock" for testing
AI_TEXT_PROVIDER=claude
# Image providers: "mock", "nanobanana", "google", "openai", "replicate"
AI_IMAGE_PROVIDER=replicate

# Claude API Key (required for real text generation)
# Get from: https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxx

# Replicate API Token (for character-consistent image generation)
# Get from: https://replicate.com/account/api-tokens
# Recommended for character consistency - uses IP-Adapter models
REPLICATE_API_TOKEN=r8_xxxxxxxxxxxxxxxx

# NanoBanana API Key (optional, alternative image provider)
NANOBANANA_API_KEY=

# Server Configuration
PORT=3001
CLIENT_ORIGIN=http://localhost:8080

# Retry Configuration
AI_MAX_RETRIES=2

# Supabase (optional, for cross-device sharing)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
