# NoorStudio Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# AI Engine Configuration
# ===========================================

# Text Provider: "claude" or "mock"
VITE_AI_TEXT_PROVIDER=mock

# Image Provider: "nanobanana" or "mock"
VITE_AI_IMAGE_PROVIDER=mock

# Token Limits (adjust for cost control)
VITE_AI_MAX_OUTPUT_TOKENS_OUTLINE=1200
VITE_AI_MAX_OUTPUT_TOKENS_CHAPTER=1600
VITE_AI_MAX_CHAPTERS_PER_RUN=3
VITE_AI_MAX_RETRIES=2

# Proxy URLs (for frontend-to-server communication)
VITE_AI_TEXT_PROXY_URL=/api/ai/text
VITE_AI_IMAGE_PROXY_URL=/api/ai/image

# ===========================================
# Supabase Configuration (for cross-device demo sharing)
# ===========================================

# Supabase project URL (from Project Settings > API)
VITE_SUPABASE_URL=

# Supabase anon/public key (from Project Settings > API)
VITE_SUPABASE_ANON_KEY=

# ===========================================
# Server-Side Only (NOT exposed to client)
# These go in server/.env or your deployment environment
# ===========================================

# AI_TEXT_PROVIDER=claude
# AI_IMAGE_PROVIDER=mock
# CLAUDE_API_KEY=sk-ant-api03-xxxxxxxxxxxx
# NANOBANANA_API_KEY=nb_xxxxxxxxxxxx
# PORT=3001
# CLIENT_ORIGIN=http://localhost:5173

# Supabase Server (service_role for writes - NEVER expose to client)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=eyJxxxxxxxxxxxxxxx
# SUPABASE_ANON_KEY=eyJxxxxxxxxxxxxxxx (required for auth verification)
